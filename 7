print("Положительные числа по убыванию:", positive_numbers)
# №4
numbers = list(map(int, input("Введите числа через пробел: ").split()))

even_numbers = [x for x in numbers if x % 2 == 0]
even_numbers.sort()

print("Четные числа по возрастанию:", even_numbers)
# №5
numbers = list(map(int, input("Введите числа через пробел: ").split()))
k = int(input("Введите число k: "))

filtered_numbers = [x for x in numbers if x > k]
filtered_numbers.sort(reverse=True)

print(f"Числа больше {k} по убыванию:", filtered_numbers)
